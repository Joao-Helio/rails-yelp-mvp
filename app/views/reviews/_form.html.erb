<div class="m-3">
  <%= simple_form_for [ @restaurant, @review ] do |f| %>
    <p>
      <%= f.label :content %>
      <%= f.text_field :content %>
    </p>

    <p>
      <%= f.label :rating %>
      <%= f.text_field :rating %>
    </p>
    
    <p>
      <%= f.button :submit, "Submit", class: "btn btn-primary" %>
    </p>

  <% end %>
</div>